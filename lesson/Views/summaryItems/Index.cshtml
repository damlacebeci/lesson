@model IEnumerable<lesson.Models.summaryItem>

@{
    ViewData["Title"] = "Index";
}

<h2>Brief Explanation of Concepts</h2>

<p>
    <a asp-action="Create">Add a New Concept</a>
</p>

<p>
    @if (ViewBag.Showall)
    {
        <a asp-action="Index" asp-route-showall="false">Hide Worked Summaries</a>

    }
    else
    {
        <a asp-action="Index" asp-route-showall="true">Show All Summaries</a>
    }

</p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.lessonName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Worked)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Worked)
                        {
                            <del>@Html.DisplayFor(modelItem => item.lessonName.Name)</del>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.lessonName.Name)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Worked)
                    </td>

                    <td>
                        @if (item.Worked)
                        {
                            <a asp-action="MakeNotWorked" asp-route-id="@item.Id" asp-route-showAll="@ViewBag.Showall">NotWorked</a>
                        }
                        else
                        {
                            <a asp-action="MakeWorked" asp-route-id="@item.Id" asp-route-showAll="@ViewBag.Showall">Worked</a>
                        }

                        |   <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
